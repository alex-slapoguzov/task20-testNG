<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite4" verbose="1">
    <test name="All Functions Test">
        <groups>
            <run>
                <include name="allFunctions"/>
            </run>
        </groups>
        <classes>
            <class name="testsClasses.JsonParserTests"/>
            <class name="testsClasses.CartTests"/>
            <class name="testsClasses.RealItemTests"/>
            <class name="testsClasses.VirtualItemTests"/>
        </classes>
    </test>

    <test name="Positive Test">
        <groups>
            <run>
                <include name="positive"/>
            </run>
        </groups>
        <classes>
            <class name="testsClasses.JsonParserTests"/>
            <class name="testsClasses.CartTests"/>
            <class name="testsClasses.RealItemTests"/>
            <class name="testsClasses.VirtualItemTests"/>
        </classes>
    </test>
</suite>






