<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite3" verbose="1">
    <test name="JsonParserClassTests">
        <classes>
            <class name="testsClasses.JsonParserTests"/>
        </classes>
    </test>

    <test name="All Tests">
        <classes>

            <class name="testsClasses.JsonParserTests">
                <methods>
                    <exclude name="exceptionTest"/>
                </methods>
            </class>


            <class name="testsClasses.VirtualItemTests"/>
            <class name="testsClasses.RealItemTests"/>
            <class name="testsClasses.CartTests"/>
        </classes>
    </test>

    <test name="Functions Test Without negative and exceptions">
        <groups>
            <run>
                <include name="allFunctions"/>
                <exclude name="negative"/>
                <exclude name="exceptions"/>
            </run>
        </groups>
        <classes>
            <class name="testsClasses.JsonParserTests"/>
            <class name="testsClasses.CartTests"/>
            <class name="testsClasses.RealItemTests"/>
            <class name="testsClasses.VirtualItemTests"/>
        </classes>
    </test>
</suite>
